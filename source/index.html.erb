<h1> Blog posts</h1>
<ul>
  <% data.posts.each do |_filename, post| %>
    <li>
      <%= link_to post.title, "/posts/#{post[:title].parameterize}/" %>
      <% end %>
    </li>
</ul>

<h1>JSON Blog posts</h1>
<ul>
  <% data.json_posts.each do |_filename, post| %>
    <li>
      <%= link_to post.title, "/json-posts/#{post[:title].parameterize}/" %>
      <% end %>
    </li>
</ul>
